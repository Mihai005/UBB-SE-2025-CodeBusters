<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="MealPlanner.Pages.AddFoodPage" 
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
      xmlns:local="using:MealPlanner.Pages"
      xmlns:vm="using:MealPlanner.ViewModels"
      xmlns:conv="using:MealPlanner.Converters"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="#FCE8DC">   


    <Page.DataContext>
        <vm:AddFoodPageViewModel/>
    </Page.DataContext>

    <Page.Resources>
        <conv:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Page.Resources>



    <Grid Padding="0">

        <!-- Back Button in Column 1, Row 1 -->
        <Button Content="←" FontSize="20"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Command="{Binding BackCommand}"
            BorderThickness="0"
            Background="Transparent"
            Margin="10,0,0,0" 

            Foreground="Black"
         />


        <!-- Page Title in Column 2, Row 0 -->
        <TextBlock Text="Add Food" 
               FontSize="28"
               FontFamily="Montserrat"
               FontWeight="Bold" 
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="40,30,0,0" 
               Foreground="#133224"
        />





        <Grid Margin="40 80 0 0">

            <!-- Main Grid Row Definitions -->
            <Grid.RowDefinitions>

                <RowDefinition Height="330" />
                <!-- 1'st row -->

                <RowDefinition Height="*" />
                <!-- 2'nd row -->

            </Grid.RowDefinitions>



            <Grid Grid.Row="0" >

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="400" />
                    <ColumnDefinition Width="400" />
                    <ColumnDefinition Width="400" />
                </Grid.ColumnDefinitions>


                <!-- Left Column (Search & Number of Servings) -->
                <StackPanel Grid.Column="0" Spacing="20" Margin="0,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Search:" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,5" 
                                   Foreground="#133224"/>

                        <TextBox Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 PlaceholderText="Ingredient or Meal"
                                 FontWeight="Light"
                                 PlaceholderForeground="#133224"
                                 Background="#E3C7B1"
                                 CornerRadius="15"
                                 SelectionHighlightColorWhenNotFocused="#133224"
                                 SelectionHighlightColor="#133224"/>

                        <ListView ItemsSource="{Binding SearchResults}" 
                                  Foreground="#133224"
                                  Background="#E3C7B1"
                                  SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                                  Visibility="{Binding IsSearchVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                            
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}" Padding="10"/>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            
                        </ListView>
                    </StackPanel>


                    <StackPanel>
                        <TextBlock Text="Number of servings:" 
                                   FontWeight="SemiBold" 
                                   Foreground="#133224"
                                   Margin="0,0,0,5" />
                        <Slider Minimum="1" 
                                    Maximum="10" 
                                    Value="{Binding ServingsCount, Mode=TwoWay}" 
                                    Background="#E8A087"
                                    Foreground="#E8A087"
                                    Header="" />

                        <Border Background="#E3C7B1" 
                                    Padding="5" 
                                    HorizontalAlignment="Left"
                                    CornerRadius="15"
                                    Width="100">
                            <TextBlock Text="{Binding ServingsCount}" 
                                           HorizontalAlignment="Center" 
                                           FontWeight="Light"
                                           Foreground="Black"/>
                        </Border>

                    </StackPanel>
                    <Button Content="Add food"
                            Background="#E8A087"
                            Foreground="White"
                            HorizontalAlignment="Left"
                            CornerRadius="15"
                            Width="130"
                            Padding="0,5" 
                            Command="{Binding NextCommand}"
/>
                </StackPanel>


                <!-- Left Column (Search & Number of Servings) -->
                <StackPanel Grid.Column="1" Spacing="20" Margin="50,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Selected Meal:" 
                               FontWeight="Bold" 
                               Margin="0,0,0,5" 
                               Foreground="#133224"/>

                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <Border Background="{Binding BreakfastColor}" 
                                    CornerRadius="15" 
                                    Padding="5,5" 
                                    Width="80" 
                                    HorizontalAlignment="Center">

                                <TextBlock Text="Breakfast" 
                                           
                                           Foreground="#E8A087" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>



                            <Border Background="{Binding LunchColor}" 
                                    CornerRadius="15" 
                                    Padding="5,5" 
                                    Width="80" 
                                    HorizontalAlignment="Center">

                                <TextBlock Text="Lunch" 
                                           Foreground="#E8A087" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>

                            <Border Background="{Binding DinnerColor}" 
                                    CornerRadius="15" 
                                    Padding="5,5" 
                                    Width="80" 
                                    HorizontalAlignment="Center">

                                <TextBlock Text="Dinner" 
                                           Foreground="#E8A087" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>

                            <Border Background="{Binding SnackColor}" 
                                    CornerRadius="15" 
                                    Padding="5,5" 
                                    Width="80" 
                                    HorizontalAlignment="Center">
                                <TextBlock Text="Snack" 
                                           Foreground="#133224" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center"/>
                            </Border>

                        </StackPanel>

                    </StackPanel>

                    <StackPanel>
                        <TextBlock Text="Select serving size::" 
                               FontWeight="SemiBold" 
                               Foreground="#133224"
                               Margin="0,0,0,5" />


                        <!-- Search bar -->
                        <TextBox x:Name="SearchBar" 
                                 Width="330" 
                                 PlaceholderText="Select serving size:" 
                                 CornerRadius="15"
                                 HorizontalAlignment="Left"
                                 Background="#E3C7B1"
                                 Margin="0,0,0,10"/>


                        <!-- Always visible menu with serving size options -->

                        <Border Background="#E3C7B1" 
                                CornerRadius="15" 
                                Height="160"
                                Margin="0,0,0,10">

                            <ListBox x:Name="ServingSizeListBox" 
                                 FontSize="5"
                                 Width="340" 
                                 Background="#E3C7B1"
                                 CornerRadius="15"
                                 HorizontalAlignment="Left"
                                 Margin="0,0,0,0">


                                <ListBoxItem Content="100g"
                                             Height="40"
                                             FontSize="10"
                                             HorizontalAlignment="Center"/>
                                <ListBoxItem Content="1g"
                                             Height="40"
                                             FontSize="10"
                                             HorizontalAlignment="Center"/>
                                <ListBoxItem Content="1 piece"
                                             Height="40"
                                             FontSize="10"
                                             HorizontalAlignment="Center"/>
                                <ListBoxItem Content="1 cup"
                                             Height="40"
                                             FontSize="10"
                                            HorizontalAlignment="Center"/>
                                <ListBoxItem Content="1 slice"
                                             Height="40"
                                             FontSize="10"
                                             HorizontalAlignment="Center"/>

                            </ListBox>
                        </Border>

                    </StackPanel>

                </StackPanel>

                <Grid Grid.Column="3" Background="#DDBEA9" Margin="100, 0, 0, 40"  Padding="10" CornerRadius="15">

                    <!-- Recently Used List (Left Side) -->
                    <StackPanel Grid.Column="0" Margin="0,0,0,20">
                        <TextBlock Text="Recently Used:" 
                                   FontSize="20" 
                                   FontWeight="SemiBold" 
                                   Foreground="#133224" 
                                   Margin="0,0,0,10"/>

                        <!-- 
                        <ItemsControl ItemsSource="{Binding RecentlyUsedList}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="○" FontSize="12" Foreground="#133224" Margin="0,0,5,0"/>
                                        <TextBlock Text="{Binding}" FontSize="16" Foreground="#133224"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                     -->
                    </StackPanel>



                </Grid>

            </Grid>





            <Grid Grid.Row="1" CornerRadius="15" Padding="10">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="800" />
                    <!-- Left Column (Added Food List) -->

                    <!-- Right Column (Recently Used) -->
                    <ColumnDefinition Width="350" />

                </Grid.ColumnDefinitions>

                <!-- Added Food List (Left Side) -->
                <StackPanel Grid.Column="0" Margin="0, 0, 50, 20" CornerRadius="15" Padding="10" Background="#DDBEA9">
                    <TextBlock Text="Added food:" 
                   FontSize="20" 
                   FontWeight="SemiBold" 
                   Foreground="#133224"/>

                    <!-- 
